<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Enable compression -->
    <urlCompression doDynamicCompression="true" doStaticCompression="true" dynamicCompressionBeforeCache="true"/>

    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Frame-Options" value="DENY"/>
        <add name="X-XSS-Protection" value="1; mode=block"/>
        <add name="X-Content-Type-Options" value="nosniff"/>
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin"/>
        <add name="Permissions-Policy" value="camera=(), microphone=(), geolocation=()"/>
      </customHeaders>
    </httpProtocol>

    <!-- Node.js configuration for Azure App Service -->
    <handlers>
      <add name="iisnode" path="dist/index.js" verb="*" modules="iisnode"/>
    </handlers>

    <!-- URL rewriting for SPA -->
    <rewrite>
      <rules>
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^dist/index.js\/debug[\/]?" />
        </rule>
        
        <!-- Serve static files from public directory -->
        <rule name="StaticContent" stopProcessing="true">
          <match url="^([\S]+[.](html|htm|svg|js|css|png|gif|jpg|jpeg|ico|woff|woff2|ttf|eot))" />
          <action type="Rewrite" url="dist/public/{R:1}" />
        </rule>
        
        <!-- API routes -->
        <rule name="APIRoutes" stopProcessing="true">
          <match url="^api/(.*)" />
          <action type="Rewrite" url="dist/index.js" />
        </rule>
        
        <!-- Health check -->
        <rule name="HealthCheck" stopProcessing="true">
          <match url="^health" />
          <action type="Rewrite" url="dist/index.js" />
        </rule>
        
        <!-- All other routes go to the SPA -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="dist/public/index.html"/>
        </rule>
      </rules>
    </rewrite>

    <!-- Error pages -->
    <httpErrors existingResponse="PassThrough" />

    <!-- IIS node configuration -->
    <iisnode watchedFiles="web.config;*.js"/>
    
    <!-- Default document -->
    <defaultDocument>
      <files>
        <clear/>
        <add value="index.html"/>
      </files>
    </defaultDocument>
  </system.webServer>
</configuration>